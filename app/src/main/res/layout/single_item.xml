<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_marginTop="70dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:srcCompat="@drawable/ic_western_owl"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creatorView"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:text="XXXTENTACION"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/courseView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/creatorView"
                android:maxLines="1"
                android:textSize = "18sp"
                android:textStyle="bold"
                android:textColor = "@color/wpurple"
                android:textAllCaps="true"
                android:text="Programming-1036"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/courseView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/markView"
                    android:paddingLeft="8sp"
                    android:paddingRight="8sp"
                    android:gravity="center_vertical"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="99%"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/seperator"
                    android:layout_toEndOf="@id/markView"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/wpurple" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/detailView"
                    android:layout_toEndOf="@id/seperator"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp">

                    <TextView
                        android:id="@+id/assignment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="2sp"
                        android:textDirection="rtl"
                        android:textSize = "14sp"
                        android:textColor="#424242"
                        android:text="Final Exam Lit af: 99%" />

                    <TextView
                        android:id="@+id/assignment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="2sp"
                        android:textDirection="rtl"
                        android:textSize = "14sp"
                        android:textColor="#424242"
                        android:text="Midterm Exam Lit af: 99%" />

                    <TextView
                        android:id="@+id/assignment3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="2sp"
                        android:textDirection="rtl"
                        android:textColor="#424242"
                        android:textSize = "14sp"
                        android:text="Quiz Lit af: 99%" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>